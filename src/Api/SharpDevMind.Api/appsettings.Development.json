{
  "ConnectionStrings": {
    "Database": "Host=sharpdevmind.database;Port=5432;Database=sharpdevmind;Username=postgres;Password=postgres;Include Error Detail=true",
    "Cache": "sharpdevmind.redis:6379"
  },
  "Authentication": {
    "Audience": "account",
    "TokenValidationParameters": {
      "ValidIssuers": [ "http://sharpdevmind.identity:8080/realms/sharpdevmind", "http://localhost:18080/realms/sharpdevmind" ]
    },
    "MetadataAddress": "http://sharpdevmind.identity:8080/realms/sharpdevmind/.well-known/openid-configuration",
    "RequireHttpsMetadata": false
  },
  "KeyCloak": {
    "HealthUrl": "http://sharpdevmind.identity:8080/realms/sharpdevmind"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Evently.Modules.Users.Infrastructure.Outbox": "Warning",
        "Evently.Modules.Users.Infrastructure.Inbox": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://sharpdevmind.seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "SharpDevMind.Api"
    }
  }
}
